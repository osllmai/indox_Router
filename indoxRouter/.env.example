# API Configuration
INDOX_API_HOST=0.0.0.0
INDOX_API_PORT=8000
INDOX_API_DEBUG=false
INDOX_API_WORKERS=4
INDOX_API_TIMEOUT=60
INDOX_API_CORS_ORIGINS=*
INDOX_API_RATE_LIMIT=100
INDOX_API_MAX_REQUEST_SIZE=10485760

# Authentication Configuration
INDOX_AUTH_TOKEN_EXPIRY=86400
INDOX_AUTH_REFRESH_TOKEN_EXPIRY=2592000
INDOX_AUTH_API_KEY_PREFIX=indox_
INDOX_AUTH_ADMIN_EMAIL=admin@example.com
INDOX_AUTH_ADMIN_PASSWORD=change_this_password
INDOX_AUTH_JWT_SECRET=your_jwt_secret_key_here
INDOX_AUTH_ENABLE_USER_REGISTRATION=true

# Provider Configuration
INDOX_PROVIDERS_DEFAULT_TIMEOUT=30
INDOX_PROVIDERS_RETRY_ATTEMPTS=3
INDOX_PROVIDERS_RETRY_DELAY=1
INDOX_PROVIDERS_CACHE_TTL=300
INDOX_PROVIDERS_DEFAULT_PROVIDER=openai
INDOX_PROVIDERS_DEFAULT_MODEL=gpt-3.5-turbo

# Provider API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AZURE_API_KEY=
AZURE_ENDPOINT=https://your-azure-endpoint.openai.azure.com/
COHERE_API_KEY=
MISTRAL_API_KEY=
LLAMA_API_KEY=
NVIDIA_API_KEY=
DEEPSEEK_API_KEY=
DATABRICKS_API_KEY=
HUGGINGFACE_API_KEY=

# Database Configuration
INDOX_DATABASE_TYPE=sqlite
INDOX_DATABASE_PATH=indoxrouter.db
INDOX_DATABASE_HOST=localhost
INDOX_DATABASE_PORT=5432
INDOX_DATABASE_USER=postgres
INDOX_DATABASE_PASSWORD=
INDOX_DATABASE_NAME=indoxrouter
INDOX_DATABASE_URL=
INDOX_DATABASE_POOL_SIZE=5
INDOX_DATABASE_MAX_OVERFLOW=10
INDOX_DATABASE_POOL_TIMEOUT=30
INDOX_DATABASE_POOL_RECYCLE=1800
INDOX_DATABASE_POOL_PRE_PING=true
INDOX_DATABASE_ECHO=false
INDOX_DATABASE_AUTO_MIGRATE=true
INDOX_DATABASE_BACKUP_ENABLED=false
INDOX_DATABASE_BACKUP_INTERVAL=86400
INDOX_DATABASE_BACKUP_PATH=backups
INDOX_DATABASE_BACKUP_RETENTION=7

# Logging Configuration
INDOX_LOGGING_LEVEL=INFO
INDOX_LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
INDOX_LOGGING_FILE=logs/indoxrouter.log
INDOX_LOGGING_ROTATION=1 day
INDOX_LOGGING_RETENTION=30 days

# Cache Configuration
INDOX_CACHE_TYPE=memory
INDOX_CACHE_URL=redis://localhost:6379/0
INDOX_CACHE_TTL=300

# Dashboard Configuration
INDOX_DASHBOARD_ENABLED=true
INDOX_DASHBOARD_HOST=0.0.0.0
INDOX_DASHBOARD_PORT=7860
INDOX_DASHBOARD_USERNAME=admin
INDOX_DASHBOARD_PASSWORD=admin
INDOX_DASHBOARD_THEME=default
INDOX_DASHBOARD_ENABLE_ANALYTICS=false

# Security Configuration
INDOX_SECURITY_ENABLE_RATE_LIMITING=true
INDOX_SECURITY_RATE_LIMIT_PER_MINUTE=60
INDOX_SECURITY_ENABLE_IP_BLOCKING=false
INDOX_SECURITY_BLOCKED_IPS=
INDOX_SECURITY_ENABLE_CORS=true
INDOX_SECURITY_CORS_ORIGINS=*
INDOX_SECURITY_SSL_CERT=
INDOX_SECURITY_SSL_KEY=

# Monitoring Configuration
INDOX_MONITORING_ENABLE_PROMETHEUS=false
INDOX_MONITORING_PROMETHEUS_PORT=9090
INDOX_MONITORING_ENABLE_SENTRY=false
