{
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "workers": 4,
    "timeout": 60,
    "cors_origins": ["*"],
    "rate_limit": 100,
    "max_request_size": 10485760
  },
  "auth": {
    "token_expiry": 86400,
    "refresh_token_expiry": 2592000,
    "api_key_prefix": "indox_",
    "admin_email": "admin@example.com",
    "admin_password": "change_this_password",
    "jwt_secret": "your_jwt_secret_key_here",
    "enable_user_registration": true
  },
  "providers": {
    "default_timeout": 30,
    "retry_attempts": 3,
    "retry_delay": 1,
    "cache_ttl": 300,
    "default_provider": "openai",
    "default_model": "gpt-3.5-turbo",
    
    "openai_api_key": "",
    "anthropic_api_key": "",
    "google_api_key": "",
    "azure_api_key": "",
    "azure_endpoint": "https://your-azure-endpoint.openai.azure.com/",
    "cohere_api_key": "",
    "mistral_api_key": "",
    "llama_api_key": "",
    "nvidia_api_key": "",
    "deepseek_api_key": "",
    "databricks_api_key": "",
    "huggingface_api_key": "",
    
    "model_mappings": {
      "gpt-4": "openai",
      "claude-3-opus": "anthropic",
      "gemini-pro": "google",
      "command-r-plus": "cohere",
      "mistral-large": "mistral"
    }
  },
  "database": {
    "type": "sqlite",
    "path": "indoxrouter.db",
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "",
    "database": "indoxrouter",
    "url": "",
    "pool_size": 5,
    "max_overflow": 10,
    "pool_timeout": 30,
    "pool_recycle": 1800,
    "pool_pre_ping": true,
    "echo": false,
    "auto_migrate": true,
    "backup_enabled": false,
    "backup_interval": 86400,
    "backup_path": "backups",
    "backup_retention": 7
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/indoxrouter.log",
    "rotation": "1 day",
    "retention": "30 days"
  },
  "cache": {
    "type": "memory",
    "url": "redis://localhost:6379/0",
    "ttl": 300
  },
  "dashboard": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 7860,
    "username": "admin",
    "password": "admin",
    "theme": "default",
    "enable_analytics": false
  },
  "security": {
    "enable_rate_limiting": true,
    "rate_limit_per_minute": 60,
    "enable_ip_blocking": false,
    "blocked_ips": [],
    "enable_cors": true,
    "cors_origins": ["*"],
    "ssl_cert": "",
    "ssl_key": ""
  },
  "monitoring": {
    "enable_prometheus": false,
    "prometheus_port": 9090,
    "enable_sentry": false,
    "sentry_dsn": ""
  }
} 