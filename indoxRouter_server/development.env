# IndoxRouter Server Environment Configuration (DEVELOPMENT)
# This file is for local development with Docker

#######################
# Deployment Settings #
#######################

# Set to false for development mode
INDOXROUTER_PRODUCTION_MODE=false

# Set to true if databases are running on the same server (Docker setup)
INDOXROUTER_LOCAL_MODE=true

# Application secret key (for development only)
SECRET_KEY=dev-secret-key-not-for-production

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# CORS configuration - allow all for development
CORS_ORIGINS=["*"]

#######################
# Database Settings   #
#######################

# PostgreSQL Configuration (for connecting FROM host TO Docker)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespassword
POSTGRES_DB=indoxrouter
DATABASE_URL=postgresql://postgres:postgrespassword@localhost:5433/indoxrouter
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# MongoDB Configuration (for connecting FROM host TO Docker)
MONGO_HOST=localhost
MONGO_PORT=27018
MONGO_USER=mongouser
MONGO_PASSWORD=mongopassword
MONGO_DB=indoxrouter
MONGO_AUTH_SOURCE=admin
MONGODB_URI=mongodb://localhost:27018/indoxrouter
MONGODB_DATABASE=indoxrouter

# Redis Configuration (for connecting FROM host TO Docker)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=redispassword
REDIS_DB=0

#######################
# Security Settings   #
#######################

# IP Blocking and Allowlisting (disabled for development)
ENABLE_IP_FILTERING=false
IP_ALLOWLIST=[]
IP_BLOCKLIST=[]

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

