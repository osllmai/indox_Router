# IndoxRouter Server - Environment Template
# Copy to .env and set your values
# NEVER COMMIT THIS FILE TO VERSION CONTROL

#######################################
#         Application Core            #
#######################################
HOST=0.0.0.0
PORT=8000
DEBUG=false
SECRET_KEY=generate_with_openssl_rand_hex_32
ACCESS_TOKEN_EXPIRE_MINUTES=60
INDOXROUTER_PRODUCTION_MODE=true

#######################################
#          API Provider Keys          #
#######################################
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
COHERE_API_KEY=your_cohere_key_here
GOOGLE_API_KEY=your_google_key_here
MISTRAL_API_KEY=your_mistral_key_here

#######################################
#       Default Model Settings        #
#######################################
DEFAULT_PROVIDER=openai
DEFAULT_CHAT_MODEL=gpt-4
DEFAULT_COMPLETION_MODEL=gpt-3.5-turbo-instruct
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

#######################################
#         Rate Limiting Config        #
#######################################
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

#######################################
#      PostgreSQL Database Config     #
#######################################
POSTGRES_HOST=indoxrouter-postgres
POSTGRES_PORT=5432
POSTGRES_USER=indoxrouter_app
POSTGRES_PASSWORD=generate_strong_password_here
POSTGRES_DB=indoxrouter
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

#######################################
#        MongoDB Database Config      #
#######################################
MONGO_HOST=indoxrouter-mongodb
MONGO_PORT=27017
MONGO_ROOT_USER=mongo_root_admin
MONGO_ROOT_PASSWORD=generate_strong_root_password
MONGO_APP_USER=appuser
MONGO_APP_PASSWORD=generate_strong_app_password
MONGO_INITDB_DATABASE=indoxrouter
MONGODB_URI=mongodb://${MONGO_APP_USER}:${MONGO_APP_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_INITDB_DATABASE}?authSource=admin&authMechanism=SCRAM-SHA-256

#######################################
#          Redis Configuration        #
#######################################
REDIS_HOST=indoxrouter-redis
REDIS_PORT=6379
REDIS_PASSWORD=generate_strong_redis_password

#######################################
#         Cache Configuration         #
#######################################
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_DAYS=7