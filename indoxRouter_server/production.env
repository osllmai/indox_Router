# IndoxRouter Server Environment Configuration (PRODUCTION)
# This file is for production deployment

#######################
# Deployment Settings #
#######################

# Set to true for production deployment
INDOXROUTER_PRODUCTION_MODE=true

# Set to true if databases are running on the same server (integrated Docker setup)
INDOXROUTER_LOCAL_MODE=true

# Application secret key (CHANGE THIS!)
SECRET_KEY=${SECRET_KEY}

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# CORS configuration - JSON array of allowed origins
CORS_ORIGINS=["http://91.107.153.195", "http://91.107.153.195:8000", "https://91.107.153.195"]

#######################
# Database Settings   #
#######################

# PostgreSQL Configuration (for connecting WITHIN Docker network)
POSTGRES_HOST=indoxrouter-postgres
POSTGRES_PORT=5432
POSTGRES_USER=indoxrouter_admin
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=indoxrouter
DATABASE_URL=postgresql://indoxrouter_admin:${POSTGRES_PASSWORD}@indoxrouter-postgres:5432/indoxrouter
DB_MIN_CONNECTIONS=10
DB_MAX_CONNECTIONS=50

# MongoDB Configuration (for connecting WITHIN Docker network)
MONGO_HOST=indoxrouter-mongodb
MONGO_PORT=27017
MONGO_USER=indoxrouter_admin
MONGO_PASSWORD=${MONGO_PASSWORD}
MONGO_DB=indoxrouter
MONGO_AUTH_SOURCE=admin
MONGODB_URI=mongodb://indoxrouter_admin:${MONGO_PASSWORD}@indoxrouter-mongodb:27017/indoxrouter?authSource=admin
MONGODB_DATABASE=indoxrouter

# Redis Configuration (for connecting WITHIN Docker network)
REDIS_HOST=indoxrouter-redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

#######################
# Security Settings   #
#######################

# IP Blocking and Allowlisting
ENABLE_IP_FILTERING=false
IP_ALLOWLIST=[]
IP_BLOCKLIST=[]

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

#######################
# API Provider Keys   #
#######################

# API Keys 
OPENAI_API_KEY=${OPENAI_API_KEY}
NVIDIA_API_KEY=${NVIDIA_API_KEY}

NVIDIA_API_KEY=${NVIDIA_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_API_KEY=${GOOGLE_API_KEY}
MISTRAL_API_KEY=${MISTRAL_API_KEY}
COHERE_API_KEY=${COHERE_API_KEY}
DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}


# Default provider and model
DEFAULT_PROVIDER=openai
DEFAULT_CHAT_MODEL=gpt-4o-mini
DEFAULT_COMPLETION_MODEL=gpt-4o-mini
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

#######################
# Server Settings     #
#######################

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (MUST be false in production)
DEBUG=false

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Proxy settings
USE_PROXY=false
PROXY_URL=

#######################
# Caching & Storage   #
#######################

# Response caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_DAYS=7

#######################
# Monitoring          #
#######################

# Enable/disable detailed request logging
REQUEST_LOGGING=true

# Enable/disable performance metrics
PERFORMANCE_METRICS=true

# server information (for reference)
# IPv4: 91.107.153.195
# User: root 