# IndoxRouter Server Environment Configuration (PRODUCTION)
# This file is for production deployment

#######################
# Deployment Settings #
#######################

# Set to true for production deployment
INDOXROUTER_PRODUCTION_MODE=true

# Set to true if databases are running on the same server (integrated Docker setup)
INDOXROUTER_LOCAL_MODE=true

# Application secret key (CHANGE THIS!)
SECRET_KEY=change_this_to_a_secure_secret_in_production

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# CORS configuration - JSON array of allowed origins
CORS_ORIGINS=["https://your-domain.com", "https://api.your-domain.com"]

#######################
# Database Settings   #
#######################

# PostgreSQL Configuration (for connecting WITHIN Docker network)
POSTGRES_HOST=indoxrouter-postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgrespassword
POSTGRES_DB=indoxrouter
DATABASE_URL=postgresql://postgres:postgrespassword@indoxrouter-postgres:5432/indoxrouter
DB_MIN_CONNECTIONS=10
DB_MAX_CONNECTIONS=50

# MongoDB Configuration (for connecting WITHIN Docker network)
MONGO_HOST=indoxrouter-mongodb
MONGO_PORT=27017
MONGO_USER=mongouser
MONGO_PASSWORD=mongopassword
MONGO_DB=indoxrouter
MONGO_AUTH_SOURCE=admin
MONGODB_URI=mongodb://indoxrouter-mongodb:27017/indoxrouter
MONGODB_DATABASE=indoxrouter

# Redis Configuration (for connecting WITHIN Docker network)
REDIS_HOST=indoxrouter-redis
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
REDIS_DB=0

#######################
# Security Settings   #
#######################

# IP Blocking and Allowlisting
ENABLE_IP_FILTERING=true
IP_ALLOWLIST=[]
IP_BLOCKLIST=[]

# Security settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

#######################
# API Provider Keys   #
#######################

# API Keys (REPLACE with your actual production keys)
OPENAI_API_KEY=your_production_openai_key_here
NVIDIA_API_KEY=your_production_nvidia_key_here
ANTHROPIC_API_KEY=your_production_anthropic_key_here
GOOGLE_API_KEY=your_production_google_key_here
MISTRAL_API_KEY=your_production_mistral_key_here
COHERE_API_KEY=your_production_cohere_key_here

# Default provider and model
DEFAULT_PROVIDER=openai
DEFAULT_CHAT_MODEL=gpt-4o
DEFAULT_COMPLETION_MODEL=gpt-4o
DEFAULT_EMBEDDING_MODEL=text-embedding-3-large

#######################
# Server Settings     #
#######################

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (MUST be false in production)
DEBUG=false

# Rate limiting settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Proxy settings
USE_PROXY=false
PROXY_URL=

#######################
# Caching & Storage   #
#######################

# Response caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_DAYS=7

#######################
# Monitoring          #
#######################

# Enable/disable detailed request logging
REQUEST_LOGGING=true

# Enable/disable performance metrics
PERFORMANCE_METRICS=true

